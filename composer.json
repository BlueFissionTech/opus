{
    "name": "bluefission/opus",
    "type": "project",
    "description": "Opus - The Blue Fission Platform Framework.",
    "keywords": [
        "opus",
        "eidolon"
    ],
    "license": "Exclusive",
    "authors": [
        {
            "name": "Devon Scott",
            "email": "dscott@bluefission.com",
            "homepage": "http://bluefission.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/develation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/bluecore"
        }
    ],
    "require": {
        "php": "^8.0",
        "bluefission/bluecore": "dev-main",
        "bluefission/develation": "^1.0.0-alpha",
        "php-http/discovery": "^1.19"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "bluefission/bluecore": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
